# Description: Wallet Management Tool
# URL: http://www.kde.org
# Packager: pierre at nutyx dot org
# Depends on: cmake automoc4 kde-libs kde-runtime kde-baseapps 

_name=kwalletmanager

name=kde-walletmanager
# version=4.14.3
release=1

source=(http://download.kde.org/stable/applications/$version/src/${_name}-$version.tar.xz )

build() {
	cd ${_name}-$version
	mkdir build
	cd build
	cmake -DCMAKE_INSTALL_PREFIX=/usr \
      		-DSYSCONF_INSTALL_DIR=/etc/kde \
		-DCMAKE_BUILD_TYPE=Release \
      		.. 
	make
	make DESTDIR=$PKG install
}

