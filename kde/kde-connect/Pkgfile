version=0.7.3
_name=kdeconnect
source=(http://download.kde.org/unstable/${_name}/$version/src/${_name}-kde-$version.tar.xz)

build() {
mkdir build
cd build
  cmake ../${_name}-kde-$version   \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE4_BUILD_TESTS=OFF      \
    -DCMAKE_BUILD_TYPE=Release
make
make DESTDIR=$PKG install
}
