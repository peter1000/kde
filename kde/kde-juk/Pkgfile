# Description : A jukebox, tagger and music collection manager
# URL: https://www.kde.org/
# Packager: pierre at nutyx dot org, fanch at nutyx dot org, tnut at nutyx dot org
# Depends on: qt cmake automoc4 kde-libs taglib taglib-extras 
name=kde-juk
release=1

_name=juk

source=(http://download.kde.org/stable/$version/src/${_name}-$version.tar.xz)

build() {
	cd ${_name}-$version
        mkdir build
        cd build
	cmake -DCMAKE_INSTALL_PREFIX=/usr \
      		-DSYSCONF_INSTALL_DIR=/etc/kde -DCMAKE_BUILD_TYPE=Release \
      		.. 
        make
        make DESTDIR=$PKG install

}
