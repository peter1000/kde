# Description : The Oxygen Icon Theme (Scalable Vector Graphics)
# URL: https://www.kde.org/
# Packager: pierre at nutyx dot org, fanch at nutyx dot org, tnut at nutyx dot org
# Depends on: cmake 
name=kde-oxygen-icons-svg
release=1

_name=oxygen-icons-svg
_name=oxygen-icons

source=(http://download.kde.org/stable/$version/src/${_name}-$version.tar.xz \
	http://downloads.nutyx.org/files/patchs/${_name}/icon-sekong.png)

build() {
	cd ${_name}-$version
	mkdir build
	cd build
	cmake ../ -DCMAKE_INSTALL_PREFIX=/usr ..
	cd $SRC/${_name}-*
	find scalable -type f ! -name '*.sh' -exec \
		install -D -m644 "{}" $PKG/usr/share/icons/oxygen/{} \;
}

