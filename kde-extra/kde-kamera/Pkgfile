# Description: camera, configurator d'apn for KDE4
# URL: http://www.kde.org
# Packager: pierre at nutyx dot org
# Depends on: kde-runtime libgphoto2 

_name=kamera

name=kde-kamera
release=1
version=15.04.3

source=( http://download.kde.org/stable/applications/$version/src/${_name}-$version.tar.xz)

build() {
	cd ${_name}-$version
	mkdir build
	cd build
	cmake -DCMAKE_INSTALL_PREFIX=/usr \
      		-DSYSCONF_INSTALL_DIR=/etc/kde -DCMAKE_BUILD_TYPE=Release \
      		.. 
	make
	make DESTDIR=$PKG install
}
