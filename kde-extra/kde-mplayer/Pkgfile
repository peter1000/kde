# Description : kmplayer, reader multimedia using mplayer as engine
# URL: https://www.kde.org/
# Packager: pierre at nutyx dot org, fanch at nutyx dot org, tnut at nutyx dot org
# Depends on: cmake xorg-libxt kde-libs mplayer 
name=kde-mplayer
release=1
version=0.11.3d
_name=kmplayer
source=(http://kmplayer.kde.org/pkgs/${_name}-0.11.3d.tar.bz2)
build() {
cd ${_name}-$version
mkdir build
cd build
cmake -DCMAKE_INSTALL_PREFIX=/usr \
-DCMAKE_BUILD_TYPE=release \
..
make
make DESTDIR=$PKG install
}
