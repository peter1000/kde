# Description : Strigi analyzers for various graphics file formats
# URL: https://www.kde.org/
# Packager: pierre at nutyx dot org, fanch at nutyx dot org, tnut at nutyx dot org
# Depends on: cmake automoc4 kde-libs 
name=kde-graphics-strigi-analyzer
release=2
version=4.14.3
_name=kdegraphics-strigi-analyzer
source=(http://download.kde.org/stable/$version/src/${_name}-$version.tar.xz)

build() {
        cd ${_name}-$version
        mkdir build
        cd build
        cmake -DCMAKE_INSTALL_PREFIX=/usr \
                -DSYSCONF_INSTALL_DIR=/etc/kde \
		-DCMAKE_MINIMUM_REQUIRED_VERSION=3.0 \
                -DCMAKE_BUILD_TYPE=Release \
                ..
        make
        make DESTDIR=$PKG install
}
